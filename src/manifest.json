{
   "manifest_version": 2,

   "name": "Lorem Context",
   "description": "This extension allows to insert Lorem Ipsum placeholer text in any input area with options",
   "version": "0.1.2",

   "permissions": [
      "contextMenus"
   ],
   "icons": {
     "16": "icon_016.png",
     "48": "icon_048.png"
    },

    "background": {        
        "scripts": ["menu.js"],
        "persistent": false
    },

    "content_scripts": [ {
        "matches": ["*://*/*"],
        "js": ["jquery.js", "content.js"],
        "run_at": "document_end"
    }]
}